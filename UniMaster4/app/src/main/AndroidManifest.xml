<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dam.profesor.navigationdrawer">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Preferencias" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".MenuPrincipalActivity"
            android:label="@string/title_activity_menu_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Mensajes"
            android:label="@string/title_activity_mensajes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Notas"
            android:label="@string/title_activity_notas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Pagar"
            android:label="@string/title_activity_pagar"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".lista_Notas"
            android:label="@string/title_activity_lista"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".detalle_persona"
            android:label="@string/title_activity_detalle_persona"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
