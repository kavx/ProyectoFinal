<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dam.profesor.navigationdrawer.MenuPrincipalActivity"
    tools:showIn="@layout/activity_menu_principal">
    android:background="#faf7f7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:onClick="clickMensajes"
            android:clickable="false">

            <ImageButton
                android:layout_width="97dp"
                android:layout_height="109dp"
                android:id="@+id/imageButton"
                android:background="@drawable/mensajes"
                android:layout_weight="0.12"
                android:onClick="clickMensajes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mensajes"
                android:id="@+id/textView"
                android:layout_weight="0.12"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_weight="0.09"
            android:onClick="clickNotas"
            android:clickable="false">

            <ImageButton
                android:layout_width="119dp"
                android:layout_height="119dp"
                android:id="@+id/imageButton2"
                android:background="@drawable/notas"
                android:layout_marginBottom="25dp"
                android:onClick="clickNotas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Notas"
                android:id="@+id/textView2"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:weightSum="1"
            android:onClick="clickPagar"
            android:clickable="false">

            <ImageButton
                android:layout_width="124dp"
                android:layout_height="103dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/pagar"
                android:onClick="clickPagar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Pago en Linea"
                android:id="@+id/textView3"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
